<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@drawable/gradient_drawable2"
    tools:context=".view.AppointmentViewActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/calendar"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/programareText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Programearea la donare:"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/momentulProgramarii"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/programareTextAstept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vă așteptăm cu drag!"
                    android:textAlignment="center"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>