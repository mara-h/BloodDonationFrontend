<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cg.example.blooddonationfrontend">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name2"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodDonationFrontend">
        <activity android:name="cg.example.blooddonationfrontend.view.LoginActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.RegisterActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.HomeActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.AdminDonorDetailsActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.AdminHomeActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.AppointmentActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.AppointmentViewActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.CameraActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.DonationInfoActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.DonorFormActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.QRActivity"/>
        <activity android:name="cg.example.blooddonationfrontend.view.DonorProfileActivity"/>
        <activity android:name=".view.InvalidQuestionnaireActivity"/>
        <activity android:name=".view.AdminDonorResultsActivity"/>
        <activity android:name=".view.IntroductoryActivity"
            android:exported="true">
            <intent-filter>
               <action android:name = "android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>
</manifest>